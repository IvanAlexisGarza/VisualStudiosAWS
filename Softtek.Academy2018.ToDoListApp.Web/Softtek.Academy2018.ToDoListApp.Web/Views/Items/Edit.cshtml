@model Softtek.Academy2018.ToDoListApp.Web.ViewModels.ItemFormViewModel
@using System.Web.UI.WebControls
@using Softtek.Academy2018.ToDoListApp.Web.Models
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Add a new customer</h2>

@*Helper que ayuda a iniciar una forma, ya que es disposable podemos utilizar using*@
@using (Html.BeginForm("Save", "Items"))
{
    //La clase form-group nos ayuda agrupar los campos y form-Control a darle estilo a nuestros campos
    <div class="form-group">
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.PriorityId)
        @Html.TextBoxFor(x => x.PriorityId, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PriorityId)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.DueDate)
        @Html.TextBoxFor(x => x.DueDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.DueDate)
    </div>


    @*<div class="demo-section k-content" style="text-align: center;">
            <h4>Pick a date</h4>
            @(Html.Kendo().Calendar()
                .Name("calendar")
            )
        </div>*@
    @*<div class="form-group">
            @Html.LabelFor(x => x.Tags)
            @Html.TextBoxFor(x => x.Tags, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Tags)
        </div>*@

    <div class="form-group">
        @Html.LabelFor(x => x.StatusId)
        @Html.DropDownListFor(x => x.StatusId, new SelectList(Model.Status, "Id", "Description"), "Select a Status", new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(x => x.IsArchived) Do you want to archive the Item?
        </label>
    </div>

    @Html.HiddenFor(x => x.Id);
    <button type="submit" class="btn btn-primary">
        Save
    </button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}